<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlDragRate="0.75"
    app:srlEnableLoadMore="true"
    app:srlEnablePureScrollMode="true">

    <LinearLayout
        android:background="@color/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.dagongniu.bitman.customview.CommonToolbar
            android:id="@+id/commontoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/white_circle3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/white_circle"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_state"
                    android:layout_width="@dimen/dp75"
                    android:layout_height="@dimen/dp60"
                    android:layout_below="@+id/tv_state"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp24"
                    android:src="@mipmap/check_z_icon" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp12"
                    android:gravity="center"
                    android:text="@string/authentication_reviewing"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d30" />

            </LinearLayout>


            <TextView
                android:id="@+id/des_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:text="@string/reviewing_name"
                android:textColor="@color/white"
                android:textSize="@dimen/dp12" />

            <TextView
                android:id="@+id/des_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/white"
                android:textSize="@dimen/dp12" />


            <TextView
                android:id="@+id/des_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp7"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:text="@string/reviewing_type"
                android:textColor="@color/white"
                android:textSize="@dimen/dp12" />

            <TextView
                android:id="@+id/des_tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp7"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:text="@string/crad"
                android:textColor="@color/white"
                android:textSize="@dimen/dp12" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_retry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp49"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/white_circle3"
            android:gravity="center"
            android:text="@string/authenticate_retry"
            android:textColor="@color/white"
            android:textSize="@dimen/dp16" />

    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>