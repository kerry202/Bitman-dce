<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44">

        <ImageView
            android:id="@+id/my_rl_close"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:layout_centerVertical="true"
            android:src="@mipmap/fh_arows_icon" />


        <android.support.design.widget.TabLayout
            android:id="@+id/my_magic_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>


    <View
        android:id="@+id/my_bg_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/my_ent_ord_title"
        android:background="@color/df_font_hui" />

    <android.support.v4.view.ViewPager
        android:id="@+id/my_ent_ord_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_bg_view" />


</LinearLayout>