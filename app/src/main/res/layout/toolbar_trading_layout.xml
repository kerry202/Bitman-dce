<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp44"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d30"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/df_font_gray"
                android:textSize="@dimen/d26"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/im_left"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp44"
                android:layout_centerVertical="true"
                android:src="@mipmap/fh_arows_icon" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_left_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ETH/BTC"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/dp18" />

                <ImageView
                    android:id="@+id/im_sj"
                    android:layout_width="@dimen/d25"
                    android:layout_height="@dimen/d20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d05"
                    android:layout_toRightOf="@+id/tv_left_name"
                    android:src="@mipmap/trading_arrows_x_icon"
                    android:visibility="gone" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp16"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/im_right"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp44"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/d10" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="右边功能键"
                android:textColor="@color/df_font_gray"
                android:textSize="@dimen/d26" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>