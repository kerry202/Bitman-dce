<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginRight="@dimen/dp16"
    android:background="@drawable/lib_white_circle"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center"
        android:text="@string/dialog_validation"
        android:textColor="@color/df_333333"
        android:textSize="@dimen/dp18" />

    <LinearLayout
        android:id="@+id/rl_email"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_email_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scrollbarSize="@dimen/d30"
                android:text="@string/dialog_email"
                android:textColor="@color/df_font"
                android:textSize="@dimen/d28" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d20"
                android:layout_toEndOf="@+id/tv_email_t"
                android:layout_toRightOf="@+id/tv_email_t"
                android:scrollbarSize="@dimen/d30"
                android:text="****@qq.com"
                android:textColor="@color/df_font"
                android:textSize="@dimen/d28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp49"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/lib_white_circle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp49"
                android:layout_centerVertical="true"
                android:background="@drawable/gray_bg_f8f8f8">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@null"
                    android:hint="@string/registered_hint_code"
                    android:inputType="number"
                    android:lines="20"
                    android:maxLength="6"
                    android:textColor="@color/df_font"
                    android:textColorHint="@color/df_font_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/d24" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_email_get_code"
                android:layout_width="114dp"
                android:layout_height="@dimen/dp49"
                android:layout_alignParentRight="true"
                android:background="@drawable/white_circle3"
                android:gravity="center"
                android:text="@string/dialog_get_code"
                android:textColor="@color/white"
                android:textSize="@dimen/dp14" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scrollbarSize="@dimen/d30"
                android:text="@string/dialog_phone"
                android:textColor="@color/df_font"
                android:textSize="@dimen/d28" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d20"
                android:layout_toEndOf="@+id/tv_phone_t"
                android:layout_toRightOf="@+id/tv_phone_t"
                android:scrollbarSize="@dimen/d30"
                android:text="*****"
                android:textColor="@color/df_font"
                android:textSize="@dimen/d28" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp49"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/gray_bg_f8f8f8">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d10"
                android:background="@null"
                android:hint="@string/registered_hint_code"
                android:inputType="number"
                android:lines="20"
                android:maxLength="6"
                android:textColor="@color/df_font"
                android:textColorHint="@color/df_font_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/d24" />

            <TextView
                android:id="@+id/tv_phone_get_code"
                android:layout_width="114dp"
                android:layout_height="@dimen/dp49"
                android:layout_alignParentRight="true"
                android:background="@drawable/white_circle3"
                android:gravity="center"
                android:text="@string/dialog_get_code"
                android:textColor="@color/white"
                android:textSize="@dimen/dp14" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_google"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_google_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_google"
            android:textColor="@color/df_font"
            android:textSize="@dimen/dp14" />

        <RelativeLayout
            android:id="@+id/rl_google_main"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp49"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/gray_bg_f8f8f8">

            <EditText
                android:id="@+id/et_google"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d10"
                android:background="@null"
                android:hint="@string/registered_hint_code"
                android:inputType="number"
                android:lines="20"
                android:maxLength="6"
                android:textColor="@color/df_font"
                android:textColorHint="@color/df_font_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/d24" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="@dimen/dp24"
        android:background="@drawable/noclick_circle_gray"
        android:text="@string/dialog_commit"
        android:textColor="@color/text_str"
        android:textSize="@dimen/dp16" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
</LinearLayout>
