<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.dagongniu.bitman.customview.CommonToolbar
        android:id="@+id/commontoolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/shadow_circle"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/lib_white_circle"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginRight="@dimen/dp15"
                android:background="@drawable/gray_bg_f8f8f8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_internationalization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d20"
                    android:text="+86"
                    android:textColor="@color/text_str"
                    android:textSize="@dimen/dp14" />

                <ImageView
                    android:id="@+id/iv_arrows"
                    android:layout_width="@dimen/d25"
                    android:layout_height="@dimen/d15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shanjiao_xia" />

                <EditText
                    android:id="@+id/phone_or_mail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp44"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@null"
                    android:textSize="@dimen/dp14" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:background="@drawable/gray_bg_f8f8f8">

                <EditText
                    android:id="@+id/verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp44"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/please_input_verification_code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:id="@+id/tv_cede"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp44"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/noclick_circle_gray"
                    android:gravity="center"
                    android:text="@string/registered_get_code"
                    android:textColor="@color/text_str"
                    android:textSize="@dimen/dp14" />


            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:gravity="left"
        android:text="@string/within_str"
        android:textColor="@color/df_999999"
        android:textSize="@dimen/dp13" />


    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/noclick_circle_gray"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/bind"
        android:textColor="@color/text_str"
        android:textSize="@dimen/dp16" />

</LinearLayout>