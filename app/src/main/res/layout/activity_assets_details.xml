<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <cn.dagongniu.bitman.customview.MyTradingToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/shadow_circle"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/lib_white_circle"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="@dimen/dp23"
                    android:layout_height="@dimen/dp37"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/icon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp5"
                    android:text="#"
                    android:textColor="@color/text_str"
                    android:textSize="@dimen/dp17"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp25"
                    android:layout_marginRight="@dimen/dp15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/assets_get_sum"
                        android:textColor="@color/df_999999"
                        android:textSize="@dimen/dp15" />

                    <TextView
                        android:id="@+id/tv_hold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="0.00000000"
                        android:textColor="@color/text_str"
                        android:textSize="@dimen/dp14" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp21"
                    android:layout_marginRight="@dimen/dp15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/assets_ky_sum"
                        android:textColor="@color/df_999999"
                        android:textSize="@dimen/dp15" />

                    <TextView
                        android:id="@+id/tv_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="0.00000000"
                        android:textColor="@color/text_str"
                        android:textSize="@dimen/dp14" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp21"
                    android:layout_marginRight="@dimen/dp15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/assets_freeze_money"
                        android:textColor="@color/df_999999"
                        android:textSize="@dimen/dp15" />

                    <TextView
                        android:id="@+id/tv_freeze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="0.00000000"
                        android:textColor="@color/text_str"
                        android:textSize="@dimen/d28" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@color/app_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assets_btc"
                        android:textColor="@color/df_999999"
                        android:textSize="@dimen/dp15" />

                    <TextView
                        android:id="@+id/tv_btc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0.00000000"
                        android:textColor="@color/text_str"
                        android:textSize="@dimen/d28" />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/shadow_circle"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lib_white_circle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp20"
                    android:drawableLeft="@mipmap/market_icon"
                    android:drawablePadding="@dimen/dp10"
                    android:text="@string/assets_market"
                    android:textColor="@color/text_str"
                    android:textSize="@dimen/dp15" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/asset_details_recycer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp16"
                     />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp36"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp16">

            <TextView
                android:id="@+id/rl_withdrawal"
                android:layout_width="@dimen/dp160"
                android:layout_height="@dimen/dp36"
                android:layout_centerVertical="true"
                android:background="@drawable/lib_white_circle"
                android:gravity="center"
                android:text="@string/assets_withdrawal"
                android:textColor="@color/text_str"
                android:textSize="@dimen/dp17" />

            <TextView
                android:id="@+id/rl_topup"
                android:layout_width="@dimen/dp160"
                android:layout_height="@dimen/dp36"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/white_circle3"
                android:gravity="center"
                android:text="@string/assets_topup"
                android:textColor="@color/white"
                android:textSize="@dimen/dp17" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>