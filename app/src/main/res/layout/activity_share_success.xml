<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".assets.ShareSuccessActivity">

    <cn.dagongniu.bitman.customview.MyTradingToolbar
        android:id="@+id/assets_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/im_share"
                    android:layout_width="@dimen/d140"
                    android:layout_height="@dimen/d140"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/share_success_icon" />

                <TextView
                    android:id="@+id/tv_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/im_share"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/d34"
                    android:text="分享成功"
                    android:textColor="@color/df_333333"
                    android:textSize="@dimen/d28" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_marginLeft="@dimen/d30"
                android:layout_marginRight="@dimen/d30"
                android:id="@+id/rl_my_assets"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/d88"
                android:background="@drawable/white_circle2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="完成"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d28" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>