<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp13"
        android:paddingRight="@dimen/dp13">

        <TextView
            android:id="@+id/tv_buy_or_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/kline_buy"
            android:textColor="@color/bule"
            android:textSize="@dimen/d28" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp13"
            android:text="@string/kline_sell"
            android:textColor="@color/yellow5"
            android:textSize="@dimen/dp14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp13"
        android:paddingRight="@dimen/dp13">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/kline_price"
                android:textColor="@color/df_font_hui"
                android:textSize="@dimen/dp10" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp13"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/committee_amount"
                android:textColor="@color/df_font_hui"
                android:textSize="@dimen/dp10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp13"
                android:text="@string/kline_price"
                android:textColor="@color/df_font_hui"
                android:textSize="@dimen/dp10" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/committee_amount"
                android:textColor="@color/df_font_hui"
                android:textSize="@dimen/dp10" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>