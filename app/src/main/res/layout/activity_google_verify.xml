<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlDragRate="0.75"
    app:srlEnableLoadMore="true"
    app:srlEnablePureScrollMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <cn.dagongniu.bitman.customview.CommonToolbar
            android:id="@+id/commontoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp135"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/shadow_circle"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp135"
                android:layout_centerInParent="true"
                android:background="@drawable/lib_white_circle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp15"
                    android:text="@string/google_verify_first_des"
                    android:textColor="@color/text_str"
                    android:textSize="@dimen/dp13"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp15"
                    android:lineSpacingExtra="@dimen/dp10"
                    android:text="@string/google_verify_first_des1"
                    android:textColor="@color/text_str"
                    android:textSize="@dimen/dp12" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/shadow_circle"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_centerInParent="true"
                android:background="@drawable/lib_white_circle"
                android:orientation="vertical">

                <cn.dagongniu.bitman.customview.OaxTextView
                    android:id="@+id/second_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp15"
                    android:text="@string/google_verify_second_des"
                    android:textColor="@color/text_str"
                    android:textSize="@dimen/dp13"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_key_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp100"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp16"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_google"
                        android:layout_width="@dimen/dp95"
                        android:layout_height="@dimen/dp95"
                        android:layout_gravity="center_vertical"
                        android:scaleType="center"
                        android:src="@drawable/company_icon" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp100"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp15"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_google_key"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp19"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/keys"
                            android:textColor="@color/text_str"
                            android:textSize="@dimen/dp14" />


                        <cn.dagongniu.bitman.customview.OaxTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp32"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/google_key_remind"
                            android:textColor="@color/df_999999"
                            android:textSize="@dimen/dp10" />

                        <TextView
                            android:id="@+id/rv_click_coyp"
                            android:layout_width="99dp"
                            android:layout_height="@dimen/dp23"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp13"
                            android:background="@drawable/lib_white_circle"
                            android:gravity="center"
                            android:text="@string/click_coyp"
                            android:textColor="@color/text_str"
                            android:textSize="@dimen/d22" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp110"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/shadow_circle"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/lib_white_circle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/third_des"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp15"
                    android:lineSpacingExtra="@dimen/d30"
                    android:text="@string/google_verify_third_des"
                    android:textColor="@color/text_str"
                    android:textSize="@dimen/dp13"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15">

                    <TextView
                        android:id="@+id/tv_input_google_key"
                        android:layout_width="@dimen/dp84"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15"
                        android:gravity="left"
                        android:text="@string/google_key"
                        android:textColor="@color/text_str"
                        android:textSize="@dimen/dp14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp15"
                        android:background="@drawable/gray_bg_f8f8f8">

                        <EditText
                            android:id="@+id/et_input_key"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp34"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp15"
                            android:background="@null"
                            android:hint="@string/google_key_hint"
                            android:inputType="number"
                            android:textSize="@dimen/dp14" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_open"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp49"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/noclick_circle_gray"
            android:gravity="center"
            android:text="@string/open_google_verify"
            android:textColor="@color/text_str"
            android:textSize="@dimen/dp16" />

    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>