<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    app:srlDragRate="0.75"
    app:srlEnableLoadMore="true"
    app:srlEnablePureScrollMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:id="@+id/im_close"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp44"
                android:src="@mipmap/fh_arows_icon" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/login_phone"
                android:textColor="@color/gray2"
                android:textSize="@dimen/dp18" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/shadow_circle"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/lib_white_circle"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp44"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp32"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@drawable/gray_bg_f8f8f8">

                    <ImageView
                        android:id="@+id/im_email_phone_icon"
                        android:layout_width="@dimen/dp18"
                        android:layout_height="@dimen/dp18"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp12"
                        android:src="@mipmap/phone_icon" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/d30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@color/df_theme_bg_gray" />


                    <RelativeLayout
                        android:id="@+id/rl_internationalization"
                        android:layout_width="@dimen/dp44"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp10">

                        <TextView
                            android:id="@+id/tv_internationalization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d10"
                            android:text="+86"
                            android:textColor="@color/df_333333"
                            android:textSize="@dimen/d24" />

                        <ImageView
                            android:layout_width="@dimen/d25"
                            android:layout_height="@dimen/d15"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shanjiao_xia" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_email_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/d10"
                            android:background="@null"
                            android:hint="@string/login_email_hint"
                            android:inputType="textEmailAddress"
                            android:maxLength="30"
                            android:textColor="@color/df_333333"
                            android:textColorHint="@color/df_999999"
                            android:textSize="@dimen/d28" />


                        <RelativeLayout
                            android:id="@+id/rl_x"
                            android:layout_width="@dimen/dp44"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/im_x"
                                android:layout_width="@dimen/d30"
                                android:layout_height="@dimen/d30"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/x" />
                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp44"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@drawable/gray_bg_f8f8f8"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/im_icon_pwd"
                        android:layout_width="@dimen/dp18"
                        android:layout_height="@dimen/dp18"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp13"
                        android:src="@mipmap/password_icon" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/d30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@color/df_theme_bg_gray" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/dp44"
                            android:background="@null"
                            android:digits="@string/filter_vcode"
                            android:hint="@string/login_pwd_hint"
                            android:inputType="textPassword"
                            android:maxLength="30"
                            android:textColor="@color/df_333333"
                            android:textColorHint="@color/df_999999"
                            android:textSize="@dimen/d28" />

                        <ImageView
                            android:id="@+id/rl_open_pwd"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/login_hide_icon" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp25"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp16">

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_forget_pwd"
                android:textColor="@color/text_str"
                android:textSize="@dimen/dp15" />

            <TextView
                android:id="@+id/tv_registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/registered"
                android:textColor="@color/text_str"
                android:textSize="@dimen/dp15" />

        </RelativeLayout>

        <TextView
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp49"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/noclick_circle_gray"
            android:gravity="center"
            android:text="@string/login_login"
            android:textColor="@color/text_str"
            android:textSize="@dimen/dp16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp20">

            <View
                android:layout_width="74dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:background="@color/df_DEDEDE" />

            <TextView
                android:id="@+id/ll_get_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/d25"
                android:text="@string/use_login_phone_hint"
                android:textColor="@color/text_str"
                android:textSize="@dimen/d30" />

            <View
                android:layout_width="74dp"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp30"
                android:background="@color/df_DEDEDE" />

        </RelativeLayout>


    </LinearLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
