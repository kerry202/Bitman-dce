<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlDragRate="0.75"
    app:srlEnableLoadMore="true"
    app:srlEnablePureScrollMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forgot_close"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp44"
                android:src="@mipmap/fh_arows_icon" />

            <TextView
                android:id="@+id/forgot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/forgot_phone_title"
                android:textColor="@color/df_font"
                android:textSize="@dimen/dp18" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/shadow_circle"
            android:padding="1dp">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lib_white_circle"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp49"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@drawable/gray_bg_f8f8f8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_email_phone_icon"
                        android:layout_width="@dimen/d30"
                        android:layout_height="@dimen/d30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:src="@mipmap/phone_icon" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/d30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@color/df_theme_bg_gray" />


                    <LinearLayout
                        android:id="@+id/rl_internationalization"
                        android:layout_width="@dimen/dp49"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_internationalization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d10"
                            android:text="+86"
                            android:textColor="@color/df_333333"
                            android:textSize="@dimen/d24" />

                        <ImageView
                            android:layout_width="@dimen/d25"
                            android:layout_height="@dimen/d15"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp10"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shanjiao_xia" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp49"
                        android:layout_gravity="center_vertical">

                        <EditText
                            android:id="@+id/et_email_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/d10"
                            android:background="@null"
                            android:hint="@string/forgot_phone_registered"
                            android:inputType="textEmailAddress"
                            android:maxLength="30"
                            android:textColor="@color/df_333333"
                            android:textColorHint="@color/df_999999"
                            android:textSize="@dimen/d28" />

                        <ImageView
                            android:id="@+id/im_x"
                            android:layout_width="@dimen/d30"
                            android:layout_height="@dimen/d30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp16"
                            android:src="@drawable/x"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp49"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@drawable/gray_bg_f8f8f8"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/im_icon_pwd"
                        android:layout_width="@dimen/d25"
                        android:layout_height="@dimen/d35"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:src="@mipmap/password_icon" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/d30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@color/df_theme_bg_gray" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_cede"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/dp100"
                            android:background="@null"
                            android:hint="@string/registered_hint_code"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/df_333333"
                            android:textColorHint="@color/df_999999"
                            android:textSize="@dimen/d28" />


                        <TextView
                            android:id="@+id/tv_cede"
                            android:layout_width="@dimen/dp100"
                            android:layout_height="@dimen/dp49"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/noclick_circle_gray"
                            android:gravity="center"
                            android:text="@string/registered_get_code"
                            android:textColor="@color/text_str"
                            android:textSize="@dimen/dp14" />


                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp20" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/rl_forgot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp49"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp16"
            android:background="@drawable/noclick_circle_gray"
            android:gravity="center"
            android:text="@string/registered_next"
            android:textColor="@color/text_str"
            android:textSize="@dimen/d30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp20">

            <View
                android:layout_width="74dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp39"
                android:background="@color/df_DEDEDE" />

            <TextView
                android:id="@+id/tv_get_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/d25"
                android:text="@string/use_login_phone_hint"
                android:textColor="@color/text_str"
                android:textSize="@dimen/d30" />

            <View
                android:layout_width="74dp"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp39"
                android:background="@color/df_DEDEDE" />

        </RelativeLayout>


    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>