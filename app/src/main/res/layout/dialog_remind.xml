<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="@drawable/shape_white_5_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/d06"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="@dimen/d40"
            android:textColor="@color/text_str"
            android:textSize="@dimen/d34" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/d06"
                android:textColor="@color/text_str"
                android:textSize="@dimen/d28" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp15"
            android:background="@drawable/gray_crad"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/text_str"
            android:textSize="@dimen/d28" />
    </LinearLayout>

</RelativeLayout>