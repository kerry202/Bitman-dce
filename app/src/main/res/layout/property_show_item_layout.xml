<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_marginRight="@dimen/dp16"
    android:background="@drawable/assets_gray_crad"
    android:layout_marginTop="@dimen/dp18"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="---/---"
            android:textColor="@color/df_333333"
            android:textSize="@dimen/d28" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0%"
            android:textColor="@color/df_gray_666"
            android:textSize="@dimen/d22" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_newPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="0.000000"
            android:textColor="@color/df_333333"
            android:textSize="@dimen/d24" />

        <TextView
            android:id="@+id/tv_cny_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="≈¥0.00"
            android:textColor="@color/df_gray_666"
            android:textSize="@dimen/d16" />

    </RelativeLayout>

</LinearLayout>