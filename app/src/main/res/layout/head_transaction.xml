<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_id1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#293745" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp34"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buy_or_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/d30"
            android:text="@string/kline_time"
            android:textColor="@color/df_999999"
            android:textSize="@dimen/d24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/d30"
            android:text="@string/kline_price"
            android:textColor="@color/df_999999"
            android:textSize="@dimen/d24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/d30"
            android:text="@string/committee_amount"
            android:textColor="@color/df_999999"
            android:textSize="@dimen/d24" />
    </LinearLayout>

    <View
        android:id="@+id/v_id2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#293745" />

</LinearLayout>